{
    "version": 2,
    "builds": [
        {
            "src": "api/*.py",
            "use": "@vercel/python"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/rates",
            "dest": "/api/rates.py"
        },
        {
            "src": "/api/health",
            "dest": "/api/health.py"
        },
        {
            "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|svg|webp|woff|woff2))",
            "dest": "/frontend/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/index.html"
        }
    ]
}